{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Portfolio Config",
  "type": "object",
  "properties": {
    "personalInfo": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "title": { "type": "string", "minLength": 1 },
        "mediumProfile": { "type": "string" },
        "githubProfile": { "type": "string" },
        "updatedLabel": { "type": "string" },
        "defaultTheme": { "type": "string", "enum": ["light", "dark"], "default": "light" }
      },
      "required": ["name", "title"],
      "additionalProperties": false
    },

    "about": {
      "type": "object",
      "properties": {
        "tagline": { "type": "string", "minLength": 1 },
        "bio": { "type": "string", "minLength": 1 },
        "photo": { "$ref": "#/definitions/imageRef" },
        "cta": {
          "type": "object",
          "properties": {
            "label": { "type": "string", "minLength": 1 },
            "url": { "type": "string" }
          },
          "required": ["label", "url"],
          "additionalProperties": false
        },
        "personJSONLD": { "type": "boolean", "default": true }
      },
      "required": ["tagline", "bio"],
      "additionalProperties": false
    },

    "navigation": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": { "type": "string", "minLength": 1 },
          "href": { "type": "string", "minLength": 1 }
        },
        "required": ["label", "href"],
        "additionalProperties": false
      },
      "default": []
    },

    "sidebar": {
      "type": "object",
      "properties": {
        "updates": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "date": { "type": "string", "minLength": 1 },
              "text": { "type": "string", "minLength": 1 }
            },
            "required": ["date", "text"],
            "additionalProperties": false
          },
          "default": []
        },
        "skillsSections": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string", "minLength": 1 },
              "items": { 
                "type": "array", 
                "items": { "type": "string", "minLength": 1 },
                "minItems": 1
              }
            },
            "required": ["title", "items"],
            "additionalProperties": false
          },
          "default": []
        },
        "quickLinks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string", "minLength": 1 },
              "url": { "type": "string", "minLength": 1 }
            },
            "required": ["label", "url"],
            "additionalProperties": false
          },
          "default": []
        }
      },
      "additionalProperties": false
    },

    "projects": {
      "type": "array",
      "items": { "$ref": "#/definitions/project" },
      "default": []
    },

    "openSource": {
      "type": "array",
      "items": { "$ref": "#/definitions/openSourceItem" },
      "default": []
    },

    "academics": {
      "type": "object",
      "properties": {
        "education": { 
          "type": "array", 
          "items": { "$ref": "#/definitions/educationItem" },
          "default": []
        },
        "exams": { 
          "type": "array", 
          "items": { "$ref": "#/definitions/examItem" },
          "default": []
        },
        "internships": { 
          "type": "array", 
          "items": { "$ref": "#/definitions/internshipItem" },
          "default": []
        }
      },
      "additionalProperties": false
    },

    "blog": {
      "type": "object",
      "properties": {
        "showOnHomepage": { "type": "boolean", "default": true },
        "mode": { "type": "string", "enum": ["manual", "feed"], "default": "manual" },
        "cacheMinutes": { "type": "integer", "minimum": 1, "default": 15 },
        "manualPosts": {
          "type": "array",
          "items": { "$ref": "#/definitions/blogManualPost" },
          "default": []
        },
        "normalized": {
          "type": "array",
          "description": "Server-filled cache derived from manualPosts",
          "items": { "$ref": "#/definitions/blogNormalizedPost" },
          "default": []
        },
        "taxonomy": { 
          "$ref": "#/definitions/blogTaxonomy"
        }
      },
      "required": ["mode"],
      "additionalProperties": false
    },

    "settings": {
      "type": "object",
      "properties": {
        "accessibility": {
          "type": "object",
          "properties": {
            "skipLinkLabel": { "type": "string", "default": "Skip to content" },
            "forceFocusVisible": { "type": "boolean", "default": true },
            "minContrastAA": { "type": "boolean", "default": true },
            "requireCaptions": { "type": "boolean", "default": false }
          },
          "additionalProperties": false
        },
        "performance": {
          "type": "object",
          "properties": {
            "lazyLoadImagesDefault": { "type": "boolean", "default": true },
            "responsiveImagesDefault": { "type": "boolean", "default": true },
            "maxImageWidth": { "type": "integer", "minimum": 320, "default": 2560 },
            "deferNonCriticalJS": { "type": "boolean", "default": true }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },

  "required": ["personalInfo"],
  "additionalProperties": false,

  "definitions": {
    "imageRef": {
      "type": "object",
      "properties": {
        "src": { "type": "string", "minLength": 1 },
        "alt": { "type": "string" }
      },
      "required": ["src", "alt"],
      "additionalProperties": false
    },

    "thumbnailRef": {
      "type": "object",
      "properties": {
        "src": { "type": "string", "minLength": 1 },
        "fullSrc": { "type": "string", "minLength": 1 },
        "alt": { "type": "string" }
      },
      "required": ["src", "fullSrc"],
      "additionalProperties": false
    },

    "mediaTab": {
      "type": "object",
      "properties": {
        "id": { 
          "type": "string", 
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9-_]+$"
        },
        "label": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "enum": ["video", "gallery", "diagram"] },
        "content": { "type": "object" }
      },
      "required": ["id", "label", "type", "content"],
      "additionalProperties": false,
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "video" } } },
          "then": {
            "properties": {
              "content": {
                "type": "object",
                "properties": {
                  "videoId": { "type": "string", "minLength": 1 },
                  "placeholder": { "type": "string", "default": "Click to load video..." }
                },
                "required": ["videoId"],
                "additionalProperties": false
              }
            }
          }
        },
        {
          "if": { "properties": { "type": { "const": "gallery" } } },
          "then": {
            "properties": {
              "content": {
                "type": "object",
                "properties": {
                  "mainImage": { "$ref": "#/definitions/imageRef" },
                  "thumbnails": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/thumbnailRef" },
                    "minItems": 1
                  }
                },
                "required": ["mainImage", "thumbnails"],
                "additionalProperties": false
              }
            }
          }
        },
        {
          "if": { "properties": { "type": { "const": "diagram" } } },
          "then": {
            "properties": {
              "content": {
                "type": "object",
                "properties": {
                  "src": { "type": "string", "minLength": 1 },
                  "alt": { "type": "string", "minLength": 1 },
                  "caption": { "type": "string" }
                },
                "required": ["src", "alt"],
                "additionalProperties": false
              }
            }
          }
        }
      ]
    },

    "techSpecs": {
      "type": "object",
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "items": { 
          "type": "array", 
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1
        }
      },
      "required": ["title", "items"],
      "additionalProperties": false
    },

    "projectLinks": {
      "type": "object",
      "properties": {
        "github": { "type": "string", "format": "uri" },
        "demo": { "type": "string", "format": "uri" },
        "paper": { "type": "string", "format": "uri" },
        "website": { "type": "string", "format": "uri" }
      },
      "additionalProperties": { "type": "string" },
      "minProperties": 1
    },

    "caseStudy": {
      "type": "object",
      "properties": {
        "role": { "type": "string", "minLength": 1 },
        "responsibilities": { 
          "type": "array", 
          "items": { "type": "string", "minLength": 1 }
        },
        "problem": { "type": "string", "minLength": 1 },
        "approach": { "type": "string", "minLength": 1 },
        "impact": { "type": "string", "minLength": 1 },
        "outcomes": { 
          "type": "array", 
          "items": { "type": "string", "minLength": 1 }
        }
      },
      "additionalProperties": false
    },

    "project": {
      "type": "object",
      "properties": {
        "id": { 
          "type": "string", 
          "minLength": 1, 
          "pattern": "^[a-zA-Z0-9-_]+$" 
        },
        "title": { "type": "string", "minLength": 1 },
        "meta": {
          "type": "object",
          "properties": {
            "category": { "type": "string", "minLength": 1 },
            "status": { "type": "string", "minLength": 1 },
            "date": { "type": "string", "minLength": 1 }
          },
          "required": ["category", "status", "date"],
          "additionalProperties": false
        },
        "summary": { "type": "string", "minLength": 1 },
        "featured": { "type": "boolean", "default": false },
        "media": {
          "type": "object",
          "properties": {
            "tabs": { 
              "type": "array", 
              "items": { "$ref": "#/definitions/mediaTab" }, 
              "minItems": 1 
            }
          },
          "required": ["tabs"],
          "additionalProperties": false
        },
        "techSpecs": { "$ref": "#/definitions/techSpecs" },
        "content": { 
          "type": "array", 
          "items": { "type": "string", "minLength": 1 }, 
          "minItems": 1 
        },
        "links": { "$ref": "#/definitions/projectLinks" },
        "caseStudy": { "$ref": "#/definitions/caseStudy" }
      },
      "required": ["id", "title", "meta", "summary", "content"],
      "additionalProperties": false
    },

    "openSourceItem": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "blurb": { "type": "string" },
        "repoUrl": { "type": "string", "format": "uri" },
        "demoUrl": { "type": "string", "format": "uri" },
        "license": { "type": "string" },
        "goodFirstIssuesUrl": { "type": "string", "format": "uri" },
        "tags": { 
          "type": "array", 
          "items": { "type": "string", "minLength": 1 },
          "default": []
        }
      },
      "required": ["name", "repoUrl"],
      "additionalProperties": false
    },

    "educationItem": {
      "type": "object",
      "properties": {
        "level": { 
          "type": "string", 
          "enum": ["secondary", "higherSecondary", "bachelors", "masters", "phd"] 
        },
        "institution": { "type": "string", "minLength": 1 },
        "board": { "type": "string" },
        "location": { "type": "string" },
        "start": { "type": "string" },
        "end": { "type": "string" },
        "grade": { "type": "string" },
        "honors": { "type": "string" },
        "coursework": { 
          "type": "array", 
          "items": { "type": "string", "minLength": 1 },
          "default": []
        }
      },
      "required": ["level", "institution"],
      "additionalProperties": false
    },

    "examItem": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "subject": { "type": "string" },
        "authority": { "type": "string" },
        "year": { "type": "string", "minLength": 1 },
        "score": { "type": "string" },
        "percentile": { "type": "string" },
        "rank": { "type": "string" },
        "certificateUrl": { "type": "string", "format": "uri" }
      },
      "required": ["name", "year"],
      "additionalProperties": false
    },

    "internshipItem": {
      "type": "object",
      "properties": {
        "org": { "type": "string", "minLength": 1 },
        "title": { "type": "string", "minLength": 1 },
        "team": { "type": "string" },
        "location": { "type": "string" },
        "start": { "type": "string", "minLength": 1 },
        "end": { "type": "string" },
        "proofUrl": { "type": "string", "format": "uri" },
        "contact": { "type": "string", "format": "email" },
        "bullets": { 
          "type": "array", 
          "items": { "type": "string", "minLength": 1 },
          "default": []
        },
        "tech": { 
          "type": "array", 
          "items": { "type": "string", "minLength": 1 },
          "default": []
        }
      },
      "required": ["org", "title", "start"],
      "additionalProperties": false
    },

    "blogSeries": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "title": { "type": "string", "minLength": 1 },
        "items": { 
          "type": "array", 
          "items": { "type": "string", "format": "uri" }, 
          "minItems": 1 
        }
      },
      "required": ["id", "title", "items"],
      "additionalProperties": false
    },

    "blogTaxonomy": {
      "type": "object",
      "properties": {
        "categories": { 
          "type": "array", 
          "items": { "type": "string", "minLength": 1 },
          "default": []
        },
        "tagSuggestions": { 
          "type": "array", 
          "items": { "type": "string", "minLength": 1 },
          "default": []
        },
        "series": { 
          "type": "array", 
          "items": { "$ref": "#/definitions/blogSeries" },
          "default": []
        }
      },
      "additionalProperties": false
    },

    "blogManualPost": {
      "type": "object",
      "properties": {
        "url": { "type": "string", "format": "uri" },
        "category": { "type": "string" },
        "pinned": { "type": "boolean", "default": false },
        "overrides": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "summary": { "type": "string" },
            "image": { "type": "string", "format": "uri" },
            "date": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "required": ["url"],
      "additionalProperties": false
    },

    "blogNormalizedPost": {
      "type": "object",
      "properties": {
        "url": { "type": "string", "format": "uri" },
        "title": { "type": "string", "minLength": 1 },
        "summary": { "type": "string" },
        "image": { "type": "string", "format": "uri" },
        "date": { "type": "string" },
        "readMinutes": { "type": "integer", "minimum": 1 },
        "tags": { 
          "type": "array", 
          "items": { "type": "string", "minLength": 1 },
          "default": []
        },
        "category": { "type": "string" },
        "pinned": { "type": "boolean", "default": false },
        "series": { 
          "type": "array", 
          "items": { "type": "string", "minLength": 1 },
          "default": []
        }
      },
      "required": ["url", "title"],
      "additionalProperties": false
    }
  }
}
